<craftpainkillers>
  <conditional>
    <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Crafting.MoreCrafts.CraftPainkillers') == 'On'">
      <append xpath="/recipes">
        <recipe name="drugPainkillers" count="1" craft_time="10" craft_area="chemistryStation" tags="chemStationCrafting">
          <ingredient name="resourcePotassiumNitratePowder" count="2"/>
          <ingredient name="resourceCropCoffeeBeans" count="2"/>
          <ingredient name="resourceAnimalFat" count="2"/>
          <ingredient name="drinkJarBeer" count="2"/>
          <ingredient name="resourceYuccaFibers" count="6"/>
        </recipe>
      </append>
    </if>
    <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Crafting.MoreCrafts.CraftPainkillers') == 'Off'"/>
  </conditional>
</craftpainkillers>
