    <!--
    Craft Component Parts
-->
        <conditional>
            <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Crafting.MoreCrafts.CraftParts') == 'On'">
                <append xpath="/items/item[(starts-with(@name, 'armor') or starts-with(@name, 'gun') or starts-with(@name, 'melee')) and contains(@name, 'Parts')]">
                    <property name="Group" value="Tools/Traps"/>
                </append>
            </if>
            <else />
        </conditional>
    <!--
    Craft Solar Banks and Cells
-->
        <conditional>
            <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Crafting.MoreCrafts.CraftSolars') == 'On'">
                    <append xpath="/items/item[@name='solarbank']">
                        <property name="UnlockedBy" value="craftingElectrician"/>
                    </append>
                    <append xpath="/items/item[@name='solarCell']">
                        <property name="UnlockedBy" value="craftingElectrician"/>
                    </append>
            </if>
            <else />
        </conditional>
    <!--
    Craft Vitamins
-->
        <conditional>
            <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Crafting.MoreCrafts.CraftVitamins') == 'On'">
                <append xpath="/items/item[@name='drugVitamins']/property[@name='Tags']/@value">,learnable,chemStationCrafting</append>
