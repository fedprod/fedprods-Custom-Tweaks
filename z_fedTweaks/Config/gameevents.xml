<z_fedTweaks>
    <!--
    Customizable Amount of Skills Points after finishing the Basics Challenge
-->
        <conditional>
            <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Tweaks.Gameplay.SetBasicChallengeSP') == '14'">
                <set xpath="gameevents/action_sequence[@name='challenge_group_reward_basics']/action[@class='AddSkillPoints']/property[@name='skill_points']/@value">14</set>
            </if>
            <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Tweaks.Gameplay.SetBasicChallengeSP') == '21'">
                <set xpath="gameevents/action_sequence[@name='challenge_group_reward_basics']/action[@class='AddSkillPoints']/property[@name='skill_points']/@value">21</set>
            </if>
            <if cond="modsetting('fedprods_Custom_Tweaks', 'Global', 'Tweaks.Gameplay.SetBasicChallengeSP') == '28'">
                <set xpath="gameevents/action_sequence[@name='challenge_group_reward_basics']/action[@class='AddSkillPoints']/property[@name='skill_points']/@value">28</set>
            </if>
            <else />
        </conditional>
    <!--
    
-->
</z_fedTweaks>